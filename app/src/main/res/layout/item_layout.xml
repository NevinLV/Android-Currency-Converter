<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:cardBackgroundColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingTop="4dp" android:paddingBottom="4dp"
            android:background="@drawable/box"
            android:padding="20sp"
            android:layout_margin="5sp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:background="@color/boxes"
                >
            <TextView
                    android:text="XXX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/CharCodeId" android:textColor="#FFFFFF"
                    android:textSize="30sp" android:textStyle="bold" android:textAlignment="viewStart"
                    android:background="@color/boxes"/>
            <TextView
                    android:text="Name of Ð¡urrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/NameId"
                    android:textColor="@color/NameText"
                    android:background="@color/boxes"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal" android:paddingEnd="5sp"
                android:background="@color/boxes">
            <TextView
                    android:gravity="end"
                    android:text="000.00000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/VolueId" android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:background="@color/boxes"/>
            <TextView
                    android:gravity="end"
                    android:text="000.00000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/PreviousId" android:textSize="18sp"
                    android:background="@color/boxes"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>